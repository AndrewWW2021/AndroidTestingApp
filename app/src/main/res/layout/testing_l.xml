<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/Zast"
        android:layout_width="match_parent"
        android:layout_height="68dp" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/Zast"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="146dp"
        android:layout_height="363dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_from"
        android:layout_width="175dp"
        android:layout_height="314dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="180dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_var"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/b_task"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/b_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rv"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/b_step"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rv"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/b_zap"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/b_var"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/t_var"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/b_var"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:hint="Переменные" />

    <Button
        android:id="@+id/buttonT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="1000dp"
        android:text="Test" />
    <!--
    <ImageButton
        android:id="@+id/imageButton_inbox"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_below="@+id/Lev_check"
        android:layout_marginLeft="250dp"
        app:srcCompact="@drawable/inbox" />


    <com.example.engl_testing.SampleView
        android:id="@+id/Graph"
        android:layout_width="59dp"
        android:layout_height="456dp"
        android:layout_below="@+id/tv"
        android:layout_marginTop="16dp"
        tools:ignore="MissingClass" />


        -->

    <Button
        android:id="@+id/buttonT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="1000dp"
        android:text="Test2" />

    <EditText
        android:id="@+id/t_inp"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_below="@+id/b_task"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:hint="Ввод" />

    <TextView
        android:id="@+id/t_out"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/t_inp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Вывод"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/debug"
        android:layout_width="540dp"
        android:layout_height="500dp"
        android:layout_below="@+id/t_out"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="Вывод"
        android:textSize="20sp" />




</RelativeLayout>
</ScrollView>